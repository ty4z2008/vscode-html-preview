{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2016", "ES2017"],
    "target": "es6",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": "."
  },
  "exclude": [
    "src/test/**/*",
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*",
  ],
  "watch": true,
  "allowJs": true
}