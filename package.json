{
  "name": "html-preview",
  "displayName": "HTML preview",
  "description": "realtime preview html",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "public/images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "keywords": [
    "HTML",
    "Preview",
    "realtime",
    "auto reload"
  ],
  "activationEvents": [
    "onCommand:html.realtimePreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html.realtimePreview",
        "title": "Live Realtime Preview HTML",
        "category": "Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p .",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --fix --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile && yarn lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  }
}
